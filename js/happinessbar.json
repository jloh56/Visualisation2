{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Average World Happiness by Region",
  "width": 800,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/jloh56/Visualisation2/main/data/WHR_2023.csv",
    "format": {
      "type": "csv"
    }
  },
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "region",
      "type": "nominal",
      "title": "Region"
    },
    "y": {
      "aggregate": "average",
      "field": "happiness_score", 
      "type": "quantitative",
      "title": "Average World Happiness"
    },
    "color": {
      "condition": {
        "test": "datum.region === 'North America and ANZ'",
        "value": "#ffff99"
      },
      "value": "lightgrey"
    }
  }
}

