{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Average World Happiness by Region",
    "width": "container",
    "config": {
        "background": "#F5F5F5"
    },
    "data": {
      "url": "https://raw.githubusercontent.com/jloh56/Visualisation2/main/data/WHR_2023.csv",
      "format": {
        "type": "csv"
      }
    },
    "mark": "bar",
    "encoding": {
      "x": {
        "field": "continent",
        "type": "nominal",
        "title": "Continent"
      },
      "y": {
        "aggregate": "average",
        "field": "happiness_score", 
        "type": "quantitative",
        "title": "Average World Happiness"
      },
      "color": {
        "condition": {
          "test": "datum.continent === 'Oceania'",
          "value": "#EB3F50"
        },
        "value": "lightgrey"
      }
    }
  }
