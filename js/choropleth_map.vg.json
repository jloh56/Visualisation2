{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "World Happiness Report (2023)",
  "width": 800,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/jloh56/Visualisation2/main/js/ne_110m.json",
    "format": {"type": "topojson", "feature": "ne_110m"}
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/jloh56/Visualisation2/main/data/WHR_2023.csv"
        },
        "key": "Country",
        "fields": ["happiness_score"]
      }
    },
    {"calculate": "datum.happiness_score + 0.1", "as": "Happiness Score"}
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "Happiness Score",
      "type": "quantitative",
      "scale": {"type": "log"}
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "happiness_score", "type": "quantitative"}
    ]
  }
}
